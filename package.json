{
    "name": "monopoly",
    "version": "0.0.0",
    "description": "Online Monopoly game",
    "main": "index.js",
    "scripts": {
        "start:server": "ts-node server/index.ts",
        "start:client": "ts-node client/testClient.ts",
        "ts-node": "ts-node",
        "build": "tsc",
        "test": "jest --testPathPattern=/__test__/",
        "automation": "env DEBUG=debug CI=true jest --runInBand --testPathPattern=/__integration__/",
        "lint": "tslint --project tsconfig.json",
        "fix": "tslint --project tsconfig.json --fix"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/SeawolvesAtCali/Monopoly.git"
    },
    "author": "",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/SeawolvesAtCali/Monopoly/issues"
    },
    "homepage": "https://github.com/SeawolvesAtCali/Monopoly#readme",
    "eslintConfig": {
        "extends": [
            "airbnb-base",
            "plugin:prettier/recommended"
        ],
        "parser": "babel-eslint",
        "rules": {
            "no-unused-vars": [
                "error",
                {
                    "vars": "local",
                    "args": "none",
                    "varsIgnorePattern": "debug"
                }
            ],
            "class-methods-use-this": "off",
            "no-unused-expressions": [
                "error",
                {
                    "allowShortCircuit": true
                }
            ],
            "no-plusplus": "off",
            "no-console": "off",
            "no-case-declarations": "off",
            "global-require": "off",
            "import/no-dynamic-require": "off",
            "no-param-reassign": "off"
        },
        "env": {
            "jest": true
        }
    },
    "prettier": {
        "printWidth": 100,
        "tabWidth": 4,
        "singleQuote": true,
        "trailingComma": "all",
        "arrowParens": "always",
        "proseWrap": "always"
    },
    "dependencies": {
        "commander": "^2.15.1",
        "debug": "^3.1.0",
        "immer": "^1.7.2",
        "lodash": "^4.17.10",
        "socket.io": "^2.1.0",
        "socket.io-client": "^2.1.1"
    },
    "devDependencies": {
        "@types/debug": "0.0.30",
        "@types/jest": "^23.3.1",
        "@types/lodash": "^4.14.116",
        "@types/socket.io": "^1.4.38",
        "@types/socket.io-client": "^1.4.32",
        "babel-eslint": "^8.2.6",
        "babel-jest": "^23.4.2",
        "eslint": "4.19.1",
        "eslint-config-airbnb-base": "^12.1.0",
        "eslint-config-prettier": "^2.9.0",
        "eslint-plugin-import": "2.12.0",
        "eslint-plugin-prettier": "^2.6.0",
        "jest": "^23.5.0",
        "prettier": "^1.12.1",
        "ts-jest": "^23.1.4",
        "ts-node": "^7.0.1",
        "tslint": "~5.11.0",
        "tslint-config-prettier": "~1.15.0",
        "typescript": "^3.0.3"
    },
    "jest": {
        "globals": {
            "ts-jest": {
                "tsConfigFile": "tsconfig.json"
            }
        },
        "moduleFileExtensions": [
            "ts",
            "js"
        ],
        "transform": {
            "^.+\\.(ts|js)?$": "ts-jest"
        },
        "testMatch": [
            "<rootDir>/(common|server|client|automation|__integration__)/**/*.test.(ts|js)"
        ],
        "testEnvironment": "node",
        "restoreMocks": true,
        "clearMocks": true
    }
}
