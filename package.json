{
    "name": "monopoly",
    "version": "0.0.0",
    "description": "Online Monopoly game",
    "main": "index.js",
    "scripts": {
        "start:server": "flow-node server/index.js",
        "flow-node": "flow-node",
        "test": "jest",
        "lint": "eslint .",
        "fix": "eslint --fix .",
        "flow": "flow"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/SeawolvesAtCali/Monopoly.git"
    },
    "author": "",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/SeawolvesAtCali/Monopoly/issues"
    },
    "homepage": "https://github.com/SeawolvesAtCali/Monopoly#readme",
    "eslintConfig": {
        "extends": [
            "airbnb-base",
            "plugin:prettier/recommended"
        ],
        "parser": "babel-eslint",
        "plugins": [
            "flowtype"
        ],
        "rules": {
            "no-unused-vars": [
                "error",
                {
                    "vars": "local",
                    "args": "none",
                    "varsIgnorePattern": "debug"
                }
            ],
            "class-methods-use-this": "off",
            "no-unused-expressions": [
                "error",
                {
                    "allowShortCircuit": true
                }
            ],
            "no-plusplus": "off",
            "no-console": "off",
            "no-case-declarations": "off",
            "global-require": "off",
            "import/no-dynamic-require": "off",
            "no-param-reassign": "off"
        },
        "env": {
            "jest": true
        }
    },
    "prettier": {
        "printWidth": 100,
        "tabWidth": 4,
        "singleQuote": true,
        "trailingComma": "all",
        "arrowParens": "always",
        "proseWrap": "always"
    },
    "dependencies": {
        "commander": "^2.15.1",
        "debug": "^3.1.0",
        "lodash": "^4.17.10",
        "socket.io": "^2.1.0",
        "socket.io-client": "^2.1.1"
    },
    "devDependencies": {
        "babel-eslint": "^8.2.6",
        "eslint": "4.19.1",
        "eslint-config-airbnb-base": "^12.1.0",
        "eslint-config-prettier": "^2.9.0",
        "eslint-plugin-flowtype": "^2.50.0",
        "eslint-plugin-import": "2.12.0",
        "eslint-plugin-prettier": "^2.6.0",
        "flow-bin": "^0.77.0",
        "flow-node": "^1.2.3",
        "jest": "^22.4.4",
        "jest-flow-transform": "^1.0.1",
        "prettier": "^1.12.1",
        "prop-types": "^15.6.1"
    },
    "jest": {
        "testMatch": [
            "<rootDir>/**/__test__/**/*.{js,mjs}"
        ],
        "transform": {
            "^.+\\.js(?:\\.flow)?$": "jest-flow-transform"
        }
    }
}
