{
    "name": "monopoly",
    "version": "0.0.0",
    "description": "Online Monopoly game",
    "main": "index.js",
    "scripts": {
        "start:server": "node server/index.js",
        "start:client": "node client/controller/index.js",
        "start:sampleLoginClient": "node client/sampleLoginClient.js",
        "test": "jest",
        "lint": "eslint .",
        "fix": "eslint --fix ."
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/SeawolvesAtCali/Monopoly.git"
    },
    "author": "",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/SeawolvesAtCali/Monopoly/issues"
    },
    "homepage": "https://github.com/SeawolvesAtCali/Monopoly#readme",
    "eslintConfig": {
        "extends": [
            "airbnb-base",
            "plugin:prettier/recommended"
        ],
        "rules": {
            "no-unused-vars": [
                "error",
                {
                    "vars": "local",
                    "args": "none"
                }
            ],
            "class-methods-use-this": "off",
            "no-unused-expressions": [
                "error",
                {
                    "allowShortCircuit": true
                }
            ],
            "no-plusplus": "off",
            "no-console": "off"
        },
        "env": {
            "jest": true
        }
    },
    "prettier": {
        "printWidth": 100,
        "tabWidth": 4,
        "singleQuote": true,
        "trailingComma": "all",
        "arrowParens": "always",
        "proseWrap": "always"
    },
    "dependencies": {
        "debug": "^3.1.0",
        "socket.io": "^2.1.0",
        "socket.io-client": "^2.1.1"
    },
    "devDependencies": {
        "eslint": "4.19.1",
        "eslint-config-airbnb-base": "^12.1.0",
        "eslint-config-prettier": "^2.9.0",
        "eslint-plugin-import": "2.12.0",
        "eslint-plugin-prettier": "^2.6.0",
        "jest": "^22.4.4",
        "prettier": "^1.12.1",
        "prop-types": "^15.6.1"
    },
    "jest": {
        "testMatch": [
            "<rootDir>/**/__test__/**/*.{js,mjs}"
        ]
    }
}
