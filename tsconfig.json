{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "lib": ["dom", "es2015", "es2016", "es2017"]
    },
    "include": ["server/**/*", "common/**/*", "client/**/*", "__integration__"],
    "exclude": ["node_modules"]
}
