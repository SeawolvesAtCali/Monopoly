{
    "compilerOptions": {
        "module": "ES2015",
        "declaration": true,
        "esModuleInterop": true,
        "target": "es5",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "downlevelIteration": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "lib": ["dom", "es2015", "es2016", "es2017", "esnext.array", "es2017.object"],
        "jsx": "react"
    },
    "exclude": ["node_modules", "**/lib"]
}
